<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/page_title_color"
        app:layout_heightPercent="12.22%w"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back_icon"
            android:contentDescription="@string/app_name" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="17sp" />




    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/new_line_color">
    </View>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9">
        </View>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/addressLayout"

            android:paddingBottom="10dp"
            >
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="91.67%w"
                android:id="@+id/haveAddressLayout"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="3.05%w"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收 货 人 :"
                        app:layout_marginLeftPercent="3.47%w"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:id="@+id/receiverText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请输入收货人姓名"
                        android:background="@color/transparent"
                        android:layout_toRightOf="@id/receiverText"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:id="@+id/receiver"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@color/transparent"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:layout_alignParentRight="true"
                        android:id="@+id/receiverNumber"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="1.67%w"
                    android:id="@+id/idCard_layout"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号码:"
                        app:layout_marginLeftPercent="3.47%w"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:maxLines="2"
                        android:id="@+id/idCard"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="请输入身份证号码"
                        android:layout_toRightOf="@+id/idCard"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:background="@color/transparent"
                        android:id="@+id/idCardNum"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="1.67%w"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址:"
                        app:layout_marginLeftPercent="3.47%w"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:maxLines="2"
                        android:id="@+id/receiverAddressText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="请输入收货地址"
                        android:layout_toRightOf="@+id/receiverAddressText"
                        app:layout_textSizePercent="3.88%w"
                        android:textColor="#666666"
                        android:maxLines="2"
                        android:background="@color/transparent"
                        android:id="@+id/receiverAddress"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>


            </com.zhy.android.percent.support.PercentLinearLayout>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_heightPercent="18.72%w"
                app:layout_widthPercent="91.67%w"
               android:id="@+id/addAddressLayout"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                   android:text="+ 添加收货地址"
                    app:layout_textSizePercent="5.16%w"
                    />
            </com.zhy.android.percent.support.PercentRelativeLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="3.47%w"
                app:layout_widthPercent="2.22%w"
                android:layout_alignParentRight="true"
                app:layout_marginRightPercent="4.44%w"
                android:background="@drawable/shopping_arrow"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendLayout"
            android:orientation="vertical"
            >



        </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_heightPercent="14.44%w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            app:layout_marginLeftPercent="3.47%w"

            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            app:layout_marginLeftPercent="3.47%w"
            android:layout_alignParentRight="true"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"
            app:layout_marginRightPercent="8.05%w"
            android:layout_centerVertical="true"
            android:id="@+id/payWay"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="3.47%w"
            app:layout_widthPercent="2.22%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4.44%w"
            android:visibility="gone"
            android:background="@drawable/shopping_arrow"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="#d9d9d9">
    </View>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_heightPercent="2.77%w"
        android:background="#eeeeee">
    </View>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9">
    </View>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="24.72%w"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品结算金额"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_marginTopPercent="3.19%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_marginRightPercent="8.05%w"
            app:layout_marginTopPercent="3.05%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="@color/page_title_color"
            android:layout_alignParentRight="true"
            android:id="@+id/price2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送费用"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_marginTopPercent="7.63%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_marginRightPercent="8.05%w"
            app:layout_marginTopPercent="7.63%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="@color/page_title_color"
            android:layout_alignParentRight="true"
            android:id="@+id/trafficExpense2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券折扣"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_marginTopPercent="12.5%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-¥0.0"
            app:layout_marginRightPercent="8.05%w"
            app:layout_marginTopPercent="12.5%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="@color/page_title_color"
            android:layout_alignParentRight="true"

            android:id="@+id/couponFee"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营销活动名称"
            android:visibility="gone"
            app:layout_marginLeftPercent="3.47%w"
            app:layout_marginTopPercent="18.05%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10"
            app:layout_marginRightPercent="8.05%w"
            app:layout_marginTopPercent="18.05%w"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/activityName"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d9d9d9">
        </View>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_heightPercent="10.44%w">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:"
                app:layout_marginLeftPercent="3.47%w"

                app:layout_textSizePercent="4.16%w"
                android:textColor="#353535"
                android:layout_centerVertical="true"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_marginLeftPercent="3.47%w"
                android:layout_alignParentRight="true"
                app:layout_textSizePercent="4.16%w"
                android:textColor="#353535"
                app:layout_marginRightPercent="8.05%w"
                android:layout_centerVertical="true"
                android:id="@+id/remarks"
                android:hint="我要对商家说"
                android:maxLength="50"
                app:layout_widthPercent="77.22%w"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@color/transparent"
                />

        </com.zhy.android.percent.support.PercentRelativeLayout>
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="80dp"
            android:background="#d9d9d9">
        </View>

    </com.zhy.android.percent.support.PercentLinearLayout>
    </ScrollView>
    <com.zhy.android.percent.support.PercentRelativeLayout

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="12.22%w"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本单只需支付:"
            app:layout_marginLeftPercent="3.47%w"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="4.16%w"
            android:textColor="#353535"
            android:id="@+id/tv2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_marginLeftPercent="3.47%w"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="4.16%w"
            android:textColor="@color/page_title_color"
            android:layout_toRightOf="@id/tv2"
            android:id="@+id/actualPay"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="立即支付"
            app:layout_widthPercent="29.16%w"
            android:background="@color/page_title_color"
            android:gravity="center"
            android:layout_alignParentRight="true"
            app:layout_marginLeftPercent="3.47%w"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="4.16%w"
            android:textColor="@color/white"
            android:id="@+id/pay"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>