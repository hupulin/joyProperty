<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/page_title_color_new"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/house_management_title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/home_item_color"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/screen"
            android:layout_width="78px"
            android:layout_height="45px"
            android:gravity="center"
            android:text="筛选"
            android:background="@drawable/filter_bg"
            android:textColor="#ffffff"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

   </com.zhy.autolayout.AutoRelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unclaimed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待领取"
            android:textColor="@color/home_text_color"
            android:textSize="17sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="9dp"
            android:background="#d5d5d5"/>

        <TextView
            android:id="@+id/processing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="处理中"
            android:textColor="@color/text_color02"
            android:textSize="17sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="9dp"
            android:background="#d5d5d5"/>

        <TextView
            android:id="@+id/complete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已处理"
            android:textColor="@color/text_color02"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cursor"
        android:layout_below="@+id/layout"
        android:layout_width="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_height="wrap_content"
        android:background="@drawable/course_ic" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/cursor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d5"/>

<android.support.v4.view.ViewPager
    android:id="@+id/viewPager"
    android:layout_below="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</RelativeLayout>