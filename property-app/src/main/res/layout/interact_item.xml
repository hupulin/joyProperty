<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:id="@+id/interactItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.zhy.android.percent.support.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"

    app:layout_heightPercent="55.55%w"
    >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="进行中"
    android:id="@+id/interactState"
    android:layout_centerHorizontal="true"
    app:layout_marginTopPercent="4.44%w"
    app:layout_textSizePercent="3.05%w"
    android:textColor="@color/gray_text"
    />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        app:layout_heightPercent="30%w"
        app:layout_widthPercent="30%w"
    android:scaleType="fitXY"
        app:layout_marginTopPercent="11.80%w"
        android:id="@+id/contentImage"
        app:layout_marginRightPercent="5.69%w"
        app:layout_marginEndPercent="5.69%w"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="幸福家园首次活动"
        app:layout_widthPercent="56%w"
        app:layout_marginTopPercent="11.11%w"
        app:layout_textSizePercent="4.86%w"
        app:layout_marginLeftPercent="5.83%w"
        app:layout_marginStartPercent="5.83%w"
        android:textStyle="bold"
        android:id="@+id/theme"
        android:textColor="@color/gray_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2006第一期举行了网站的首次的线下会话聚会活动命名为“nacity”，来看看圣地亚哥会展中心的盛况吧。CEO表示拥有最热情的粉丝，所以我们想要创造最美"
        app:layout_marginTopPercent="4.77%w"
        app:layout_textSizePercent="3.33%w"
        app:layout_marginLeftPercent="5.83%w"
        app:layout_marginStartPercent="5.83%w"
        android:textStyle="bold"
        app:layout_marginRightPercent="2%w"
        android:maxLines="4"
        app:layout_widthPercent="56%w"
        android:id="@+id/content"
        android:layout_below="@+id/theme"
        android:textColor="@color/gray_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016.10.02-2016.10.10"
android:id="@+id/time"
        app:layout_marginTopPercent="5%w"
        app:layout_textSizePercent="3.88%w"
        android:textColor="#cdcdcd"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="5.69%w"
        app:layout_marginEndPercent="5.69%w"
        android:layout_below="@+id/contentImage"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/new_line_color"
        android:layout_alignParentBottom="true">

    </View>
</com.zhy.android.percent.support.PercentRelativeLayout>
<com.zhy.android.percent.support.PercentLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_heightPercent="8.88%w"
     android:orientation="horizontal"
   android:id="@+id/joinLayout"
    >
<TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:text="参与人（225）"
    android:gravity="center"

    android:id="@+id/joinNumber"
    android:layout_weight="1"/>
<View
    android:layout_width="1dp"
    android:layout_height="0dp"

    android:layout_gravity="center_vertical"
    android:background="@color/gray_text"
    app:layout_heightPercent="80%h">

</View>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="阅览数（225）"
        android:gravity="center"

        android:id="@+id/lookNumber"
        android:layout_weight="1"/>
</com.zhy.android.percent.support.PercentLinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/new_line_color"
   >

    </View>
</com.zhy.android.percent.support.PercentLinearLayout>