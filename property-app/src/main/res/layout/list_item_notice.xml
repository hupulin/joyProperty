<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:background="#ebebeb"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="17px"
        android:layout_marginLeft="17px"
        android:layout_marginRight="17px"
        android:orientation="vertical"
        android:background="@drawable/selector_list_item_bg"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:layout_marginTop="28px"
            android:text="aaa"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_marginRight="22px"
            android:ellipsize="end"
            android:textColor="@color/new_text_color"
            android:textSize="30px" />

            <TextView
                android:id="@+id/notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22px"
                android:layout_marginTop="18px"
                android:layout_marginRight="22px"
                android:ellipsize="end"
                android:text="woe"
                android:maxLines="2"
                android:textSize="25px"
                android:textColor="@color/new_text_color"
                />



        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_marginTop="20px"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_pic"
                android:layout_width="match_parent"
                android:contentDescription="@string/app_name"
                android:layout_marginRight="25px"
                android:layout_marginLeft="25px"
                android:layout_height="318px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18px"
            android:layout_marginBottom="13dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25px"
                android:drawableLeft="@drawable/notice_time_ic"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text=""
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/browse_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/browse_ic"
                android:drawablePadding="5dp"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="11sp" />
            <!--android:layout_toLeftOf="@+id/comments_amount"-->
            <!--<TextView-->
                <!--android:id="@+id/comments_amount"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
            <!-- -->
                <!--android:layout_marginRight="14dp"-->
                <!--android:drawableLeft="@drawable/message_leave_ic"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:text=""-->
                <!--android:textColor="@color/text_color"-->
                <!--android:textSize="11sp" />-->

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>