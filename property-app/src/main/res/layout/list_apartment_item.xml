<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="20px"

        android:background="@drawable/selectors_card_bg"
        android:layout_height="198px">

        <ImageView
            android:id="@+id/image"
            android:layout_width="44px"
            android:layout_height="44px"
            app:layout_auto_basewidth="height"
            android:layout_marginLeft="76px"
            android:layout_marginTop="26px"
            android:contentDescription="@string/app_name"
            android:background="@drawable/complaints_bg"
            android:drawablePadding="11dp"
            android:textColor="@color/home_item_color"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/images"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="23dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/selectors_card"
            android:drawablePadding="11dp"
            android:textColor="@color/home_item_color"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/image"
            android:layout_marginTop="33px"
            android:gravity="center"
            android:layout_marginLeft="16px"
            android:textColor="@color/home_item_color"
            android:textSize="32px"
            android:text=""

            />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="70px"
    android:layout_marginTop="116px"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日发帖"
        android:textColor="@color/neighbor_text_color"
        android:textSize="24px" />
    <TextView
        android:id="@+id/complain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6px"
        android:layout_toRightOf="@+id/item01"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textColor="@color/neighbor_text_color"
        android:textSize="24px" />
</com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290px"
            android:layout_marginTop="116px"
            android:orientation="vertical">
        <TextView
            android:id="@+id/item02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日回复"
            android:textColor="@color/neighbor_text_color"
            android:textSize="24px" />

            <TextView
                android:id="@+id/processing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/complain"

                android:layout_marginTop="6px"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:textColor="@color/neighbor_text_color"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="508px"
            android:layout_marginTop="116px"
            android:orientation="vertical">
        <TextView
            android:id="@+id/item03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="发帖总数"
            android:textColor="@color/neighbor_text_color"
            android:textSize="24px" />
            <TextView
                android:id="@+id/processed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/processing"
                android:layout_marginTop="6px"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:textColor="@color/neighbor_text_color"
                android:textSize="24px" />
</com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/item04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/crown_ic"
            android:drawablePadding="10dp"
            android:text="1903"
            android:textColor="@color/home_item_color"
            android:textSize="15sp"
            android:layout_alignTop="@+id/image"
            android:layout_alignLeft="@+id/item01"
            android:layout_alignStart="@+id/item01" />






    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>