<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="76px"
            android:layout_height="78px" />
        <!--android:background="@drawable/ServiceAttitude"-->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="服务态度"
            android:textColor="#4e4e4e" />


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/repair_divide_line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/image"
            android:drawableLeft="@drawable/goods"
            android:text="满意度好评：0.00%"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image"
            android:drawableLeft="@drawable/zhongpin"
            android:text="满意度中评：0.00%"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/image"
            android:drawableLeft="@drawable/negative"
            android:text="满意度差评：0.00%"
            android:textSize="15sp" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
