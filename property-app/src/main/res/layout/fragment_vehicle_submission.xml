<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_item_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="57dp"
        android:scrollbars="none">
        <RelativeLayout
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/OwnerInspectionLayout"
                android:orientation="vertical">
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10.56%w"
                    >
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/select_community"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_widthPercent="30%w"
                        android:layout_alignParentRight="true"
                        >
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="选择小区"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/new_text_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginRightPercent="10.28%w"
                        android:id="@+id/tv_select_community"
                        android:layout_alignParentRight="true"
                        android:hint="请选择"
                        android:textColorHint="@color/new_line_color"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/gray_text"
                        />
                    <ImageView
                        android:background="@drawable/arrow_vehicle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="2.92%w"
                        app:layout_widthPercent="1.53%w"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="5.55%w"
                        />

                </com.zhy.android.percent.support.PercentRelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_text"/>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10.56%w"
                    >
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/select_place"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_widthPercent="30%w"
                        android:layout_alignParentRight="true"
                        >
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="违停地点"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/new_text_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginRightPercent="10.28%w"
                        android:id="@+id/tv_select_place"
                        android:layout_alignParentRight="true"
                        android:hint="请选择"
                        android:textColorHint="@color/new_line_color"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/gray_text"
                        />
                    <ImageView
                        android:background="@drawable/arrow_vehicle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="2.92%w"
                        app:layout_widthPercent="1.53%w"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="5.55%w"
                        />

                </com.zhy.android.percent.support.PercentRelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_text"/>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10.56%w"
                    >
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/select_type"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_widthPercent="30%w"
                        android:layout_alignParentRight="true"
                        >
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="违停类型"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/new_text_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginRightPercent="10.28%w"
                        android:id="@+id/tv_select_type"
                        android:layout_alignParentRight="true"
                        android:hint="请选择"

                        android:textColorHint="@color/new_line_color"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/gray_text"
                        />
                    <ImageView
                        android:background="@drawable/arrow_vehicle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="2.92%w"
                        app:layout_widthPercent="1.53%w"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="5.55%w"
                        />

                </com.zhy.android.percent.support.PercentRelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_text"/>
                   <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10.56%w"
                    >
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/car_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_widthPercent="30%w"
                        android:layout_alignParentRight="true"
                        >
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="车牌号"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/new_text_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginRightPercent="10.28%w"
                        android:id="@+id/tv_car_number"
                        android:layout_alignParentRight="true"
                        android:hint="请输入"
                        android:textColorHint="@color/new_line_color"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/gray_text"
                        />
                    <ImageView
                        android:background="@drawable/arrow_vehicle"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_heightPercent="2.92%w"
                        app:layout_widthPercent="1.53%w"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="5.55%w"
                        />

                </com.zhy.android.percent.support.PercentRelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_text"/>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10.56%w"
                    >
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:id="@+id/car_order"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_widthPercent="15%w"
                        android:layout_alignParentRight="true"
                        >
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="违停通知单"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="@color/new_text_color"
                        />

                    <ImageView
                        android:background="@drawable/vehicle_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/iv_car_order"
                        app:layout_heightPercent="3.2%w"
                        app:layout_widthPercent="3.2%w"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:layout_marginRightPercent="5.56%w"
                        />
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="8.06%w"
                    android:background="#e9e9e9"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="晒单"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="#666666"
                        />
            </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.wefika.flowlayout.FlowLayout
                    android:id="@+id/flowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/content">
                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:contentDescription="@string/app_name"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/selector_property_add_picture" />
                </com.wefika.flowlayout.FlowLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="8.06%w"
                    android:background="#e9e9e9"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="5.28%w"
                        android:text="备注"
                        android:gravity="center_vertical"
                        app:layout_textSizePercent="3.61%w"
                        android:textColor="#666666"
                        />
                </com.zhy.android.percent.support.PercentRelativeLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/submission_edit_bg"
                android:gravity="top"
                android:layout_below="@+id/OwnerInspectionLayout"
                android:hint="我想说…"
                android:minHeight="100dp"
                android:maxLength="200"
                android:paddingLeft="22dp"
                android:paddingTop="12dp"
                android:textColorHint="@color/text_color02" />
            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-35dp"
                android:text="还可以输入200字"
                app:layout_textSizePercent="3.61%w"
                android:textColor="#979797" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_submission"
        android:text="@string/inspection_left"
        android:textColor="@color/home_item_color"
        android:textSize="18sp" />
</RelativeLayout>