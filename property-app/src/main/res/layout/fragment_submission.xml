<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_item_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/submit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
      android:visibility="gone"
                android:id="@+id/OwnerInspectionLayout"
                android:background="@color/white"
                android:orientation="vertical">
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="9.44%w"
android:layout_gravity="center_horizontal"
                    app:layout_widthPercent="93.05%w"
                    app:layout_marginTopPercent="2.77%w"
                    android:background="@drawable/inspection_edit_bg"
                    android:orientation="horizontal">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_heightPercent="4.48%w"
    app:layout_widthPercent="4.48%w"
    android:layout_gravity="center_vertical"
    app:layout_marginLeftPercent="4.48%w"
android:background="@drawable/inspection_owner_edit_icon"
    />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/new_text_color"
                        android:layout_gravity="center_vertical"
                        app:layout_textSizePercent="3.88%w"
                        android:background="@color/transparent"
                        android:textColorHint="@color/gray_text"
                        app:layout_marginLeftPercent="2.98%w"
                        android:id="@+id/ownerName"
                       android:hint="业主姓名"/>
                </com.zhy.android.percent.support.PercentLinearLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="9.44%w"
                    android:layout_gravity="center_horizontal"
                    app:layout_widthPercent="93.05%w"
                    app:layout_marginTopPercent="1.39%w"
                    android:background="@drawable/inspection_edit_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="4.48%w"
                        app:layout_widthPercent="4.48%w"
                        android:layout_centerVertical="true"
                        android:id="@+id/roomIcon"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="4.48%w"
                        android:background="@drawable/inspection_edit_room_icon"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/new_text_color"
                        android:layout_gravity="center_vertical"
                        app:layout_textSizePercent="3.88%w"
                        android:id="@+id/ownerRoom"

                        android:background="@color/transparent"
                        android:textColorHint="@color/gray_text"
                        app:layout_marginLeftPercent="2.98%w"
                        android:drawablePadding="5dp"
                        android:layout_toRightOf="@+id/roomIcon"
                        android:hint="业主房号"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/new_text_color"
                        app:layout_textSizePercent="3.88%w"
                        android:layout_toRightOf="@+id/roomIcon"
                        android:background="@color/transparent"
                        android:textColorHint="@color/gray_text"
                        app:layout_marginTopPercent="1.78%w"
                        android:id="@+id/roomStart"
                        app:layout_marginLeftPercent="18.48%w"
                        android:drawablePadding="5dp"
                        android:hint="*"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="9.44%w"
                    android:layout_gravity="center_horizontal"
                    app:layout_widthPercent="93.05%w"
                    app:layout_marginTopPercent="1.38%w"
                    android:background="@drawable/inspection_edit_bg"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_heightPercent="4.48%w"
                        app:layout_widthPercent="4.48%w"
                        android:layout_gravity="center_vertical"
                        app:layout_marginLeftPercent="4.48%w"
                        android:background="@drawable/inspection_edit_phone_icon"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/new_text_color"
                        android:layout_gravity="center_vertical"
                        app:layout_textSizePercent="3.88%w"
                        android:id="@+id/ownerPhone"
                        android:inputType="phone"
                        android:background="@color/transparent"
                        android:textColorHint="@color/gray_text"
                        app:layout_marginLeftPercent="2.98%w"
                        android:hint="业主电话"/>
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/submission_edit_bg"
                android:gravity="top"
                android:layout_below="@+id/OwnerInspectionLayout"
                android:hint="我想说…"
                android:minHeight="100dp"
                android:maxLength="200"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:textColorHint="@color/text_color02" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-35dp"
                android:text="还可以输入200字"
                android:textColor="#979797" />

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/flowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/content">
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_property_add_picture" />
            </com.wefika.flowlayout.FlowLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/flowLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color02"/>

            <TextView
                android:id="@+id/typeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="我的提报属于..."
                android:textColor="@color/text_color02" />

            <TextView
                android:id="@+id/apartment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/typeName"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/text_color02"
                android:gravity="center_vertical|start"
                android:paddingLeft="10dp"
                android:text="@string/inspection_apartment"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/home_item_color"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/apartment"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color02"
                android:gravity="center_vertical|start"
                android:paddingLeft="10dp"
                android:text="@string/inspection_category"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/home_item_color"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/emergency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/category"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color02"
                android:gravity="center_vertical|start"
                android:paddingLeft="10dp"
                android:hint="请选择紧急程度"
                android:textColorHint="@color/home_item_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/home_item_color"
                android:textSize="17sp" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_submission"
        android:text="@string/inspection_left"
        android:textColor="@color/home_item_color"
        android:textSize="18sp" />
</RelativeLayout>