<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.joy.property.visit.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="850px"
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/capture_crop_view"
        android:textColor="@color/white"
        android:textSize="22px"
        android:text="将访客证二维码放入框内\n       即可验证对方身份"
        />
    <TextView
        android:textSize="26px"
        android:layout_marginTop="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/message_tv"
        android:textColor="@color/white"
        android:text="点击开启照明"
        android:id="@+id/open_light"

        />
    <TextView
    android:visibility="gone"
        android:textSize="32px"
        android:layout_marginTop="174px"
        android:layout_width="438px"
        android:layout_height="126px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/message_tv"
        android:textColor="@color/white"
        android:text="手动录入"
    android:gravity="center"
    android:background="@drawable/shape_input_bg"
        android:id="@+id/manual_input"

        />


    <RelativeLayout
        android:layout_width="1000px"
        android:layout_height="86px"
        android:id="@+id/titleLayout"
        android:background="@color/page_title_color_new"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"

        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/code"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:textColor="@color/home_item_color"
            android:textSize="18sp" />
    </RelativeLayout>
    <ImageView
        android:visibility="gone"
        android:layout_width="120px"
        android:layout_height="120px"
    android:layout_marginRight="30px"
        android:background="@drawable/change_park"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
    android:layout_marginBottom="90px"
        android:id="@+id/changePark"

        />
</com.zhy.autolayout.AutoRelativeLayout>