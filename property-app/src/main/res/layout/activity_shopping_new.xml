<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentRelativeLayout

        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/page_title_color"
        app:layout_heightPercent="12.22%w"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back_icon"
            android:contentDescription="@string/app_name" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="悦购"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="4.44%w"
            app:layout_widthPercent="5%w"
            android:background="@drawable/shop_channel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="3.61%w"
            android:id="@+id/shop_type"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6.11%w"
            app:layout_widthPercent="0.2778%w"
            android:background="@drawable/shop_divide_line"
            android:layout_toLeftOf="@+id/shop_type"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4.16%w"
            android:id="@+id/divideLine"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="9.44%w"
            app:layout_widthPercent="9.44%w"
            android:id="@+id/shoppingCar"
            android:background="@drawable/shop_car"
            android:layout_toLeftOf="@+id/divideLine"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="2.80%w"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="2.63%w"
            app:layout_widthPercent="2.63%w"
            android:text="0"
            android:gravity="center"
            app:layout_textSizePercent="1.75%w"
            android:textColor="@color/white"
            android:background="@drawable/shop_car_bg"
            android:layout_alignParentRight="true"
            app:layout_marginTopPercent="3.18%w"
            android:id="@+id/carNumber"
            app:layout_marginRightPercent="16.25%w"

            />

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/un_listView">

                    <com.bigkoo.convenientbanner.ConvenientBanner
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/autoRow"
                        app:layout_heightPercent="48.05%w"
                        >
                    </com.bigkoo.convenientbanner.ConvenientBanner>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_heightPercent="1.66%w"
                        android:background="#f7f7f7"
                        android:visibility="gone"
                        >

                    </View>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_heightPercent="23.61%w"
                        app:layout_marginTopPercent="1.38%w"
                        android:id="@+id/easyToHome"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_heightPercent="23.61%w"
                        app:layout_marginTopPercent="1.38%w"
                        android:id="@+id/hyMarket"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_heightPercent="23.61%w"
                        app:layout_marginTopPercent="1.38%w"
                        android:id="@+id/electric_repair"
                        android:visibility="gone"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_heightPercent="1.66%w"
                        android:background="#f7f7f7"
                        android:visibility="gone"
                        >

                    </View>
                    <!-- 活动购物-->
                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:id="@+id/adLayout"
                        >
                         <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/adTitle"
                        app:layout_heightPercent="10.97%w"
                        >
                        <View
                            app:layout_marginTopPercent="6.11%w"
                            app:layout_marginRightPercent="6.11%w"
                            android:layout_width="0dp"
                            app:layout_widthPercent="4.17%w"
                            android:layout_toLeftOf="@+id/title_name"
                            android:layout_height="6px"
                            android:background="@color/page_title_color"
                            />
                        <TextView
                            app:layout_marginTopPercent="4.03%w"

                            android:id="@+id/title_name"
                            app:layout_textSizePercent="4.31%w"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/page_title_color"

                            android:text="南都特价"/>

                        <View
                            app:layout_marginTopPercent="6.11%w"
                            app:layout_marginLeftPercent="6.11%w"
                            android:layout_width="0dp"
                            app:layout_widthPercent="4.17%w"
                            android:layout_toRightOf="@+id/title_name"
                            android:layout_height="6px"
                            android:background="@color/page_title_color"
                            />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                         <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/adTime"
                             android:layout_centerInParent="true"
                        android:layout_below="@+id/adTitle"
                        app:layout_heightPercent="10.97%w">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="49px"
                            android:text="0"
                            android:minWidth="49px"
                            android:gravity="center"
                            android:padding="5px"
                            android:background="@color/black"
                            android:textColor="@color/white"
                            android:textSize="31px"
                            android:id="@+id/hour"
                            />
                             <TextView
                                 android:layout_width="30px"
                                 android:layout_height="49px"
                                 android:text="时"
                                 android:gravity="center"
                                  android:layout_marginLeft="3px"
                                 android:layout_marginRight="3px"
                                 android:textColor="@color/black"
                                 android:textSize="31px"
                                 />
                             <TextView
                                 android:layout_width="49px"
                                 android:layout_height="49px"
                                 android:text="0"
                                 android:gravity="center"
                                 android:background="@color/black"
                                 android:textColor="@color/white"
                                 android:textSize="31px"
                                 android:id="@+id/minute"
                                 />
                             <TextView
                                 android:layout_width="30px"
                                 android:layout_height="49px"
                                 android:text="分"
                                 android:gravity="center"
                                 android:layout_marginLeft="3px"
                                 android:layout_marginRight="3px"
                                 android:textColor="@color/black"
                                 android:textSize="31px"
                                 />
                             <TextView
                                 android:layout_width="49px"
                                 android:layout_height="49px"
                                 android:text="0"
                                 android:gravity="center"
                                 android:background="@color/black"
                                 android:textColor="@color/white"
                                 android:textSize="31px"
                                 android:id="@+id/second"
                                 />
                             <TextView
                                 android:layout_width="30px"
                                 android:layout_height="49px"
                                 android:text="秒"
                                 android:gravity="center"
                                 android:layout_marginLeft="3px"
                                 android:layout_marginRight="3px"
                                 android:textColor="@color/black"
                                 android:textSize="31px"
                                 />
                             <TextView
                                 android:layout_width="30px"
                                 android:layout_height="49px"
                                 android:text="0"
                                 android:gravity="center"
                                 android:background="@color/page_title_color"
                                 android:textColor="@color/white"
                                 android:textSize="31px"
                                 android:id="@+id/millSecond"
                                 />
                         </com.zhy.autolayout.AutoLinearLayout>
                        <ImageView
                            android:layout_below="@+id/adTime"
                            android:id="@+id/iv_ad"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:layout_heightPercent="25.42%w"
                            android:scaleType="fitXY"
                            />
                        <com.joyhome.nacity.app.shop.adapter.ScrollViewWithListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:layout_below="@+id/iv_ad"

                            android:id="@+id/shopListView">

                        </com.joyhome.nacity.app.shop.adapter.ScrollViewWithListView>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>
                <com.joyhome.nacity.app.shop.adapter.ScrollViewWithListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:layout_marginTop="10dp"
                    android:id="@+id/listView">

                </com.joyhome.nacity.app.shop.adapter.ScrollViewWithListView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="查看全部商品"
                    android:background="#ffffff"
                    android:id="@+id/lookAllGoods"
                    android:gravity="center"
                    android:visibility="gone"
                    app:layout_heightPercent="11.11%w"
                    android:textColor="@color/page_title_color"
                    app:layout_marginBottomPercent="6%w"
                    app:layout_textSizePercent="4.72%w"
                    app:layout_marginTopPercent="2.77%w"
                    />
            </com.zhy.android.percent.support.PercentLinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_marginTopPercent="1.38%w"
                android:id="@+id/searchGoods"
                app:layout_heightPercent="8.05%w"
                app:layout_widthPercent="90.27%w"
                android:background="@drawable/bulk_search_bg"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>