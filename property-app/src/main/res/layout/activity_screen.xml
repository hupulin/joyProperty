<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_height="match_parent">
<com.zhy.android.percent.support.PercentLinearLayout
    android:orientation="vertical"
    android:id="@+id/ll"
    android:layout_height="0dp"
    app:layout_heightPercent="93%h"
    android:layout_width="match_parent"
    >
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="11.11%w"
        android:background="@color/page_title_color_new">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="11.11%w"
            app:layout_widthPercent="11.11%w"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_back_icon"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="筛选"
            android:id="@+id/titleText"
            android:textColor="@color/white"
            app:layout_textSizePercent="4.44%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectApartmentLayout"
        app:layout_heightPercent="10.56%w"
        android:background="@color/white"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/select_community"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%w"
            android:layout_alignParentRight="true"
            >
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="5.28%w"
            android:text="选择项目"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.89%w"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginRightPercent="10%w"
            android:id="@+id/tv_select_community"
            android:layout_alignParentRight="true"
            android:hint="不限"
            android:textColorHint="@color/gray_text"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.61%w"
            android:textColor="@color/gray_text"
            />
        <ImageView
            android:background="@drawable/arrow_vehicle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="2.92%w"
            app:layout_widthPercent="1.53%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5.55%w"
            />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_line_color"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_heightPercent="10.56%w"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/select_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%w"
            android:layout_alignParentRight="true"
            >
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="5.28%w"
            android:text="选择时间"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.89%w"

            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginRightPercent="10%w"
            android:id="@+id/tv_select_time"
            android:layout_alignParentRight="true"
            android:hint="不限"
            android:textColorHint="@color/gray_text"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.61%w"
            android:textColor="@color/gray_text"
            />
        <ImageView
            android:background="@drawable/arrow_vehicle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="2.92%w"
            app:layout_widthPercent="1.53%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5.55%w"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_line_color"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.83%w"
        android:background="@color/white"
        android:id="@+id/stateLayout"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/select_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%w"
            android:layout_alignParentRight="true"
            >
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="5.28%w"
            android:text="选择状态"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.89%w"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginRightPercent="10%w"
            android:id="@+id/tv_select_state"
            android:layout_alignParentRight="true"
            android:hint="选填"
            android:textColorHint="@color/new_line_color"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.61%w"
            android:textColor="@color/gray_text"
            />
        <ImageView
            android:background="@drawable/arrow_vehicle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="2.92%w"
            app:layout_widthPercent="1.53%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5.55%w"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_line_color"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.83%w"
        android:background="@color/white"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/select_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%w"
            android:layout_alignParentRight="true"
            >
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="5.28%w"
            android:text="选择类型"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.89%w"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginRightPercent="10%w"
            android:id="@+id/tv_select_category"
            android:layout_alignParentRight="true"
            android:hint="选填"
            android:textColorHint="@color/new_line_color"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.61%w"
            android:textColor="@color/gray_text"
            />
        <ImageView
            android:background="@drawable/arrow_vehicle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="2.92%w"
            app:layout_widthPercent="1.53%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5.55%w"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/new_line_color"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.56%w"
        android:background="@color/white"
        android:id="@+id/peopleLayout"
        >
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="30%w"
            android:layout_alignParentRight="true"
            >
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginLeftPercent="5.28%w"
            android:text="选择执行人"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.89%w"

            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:layout_marginRightPercent="10%w"
            android:id="@+id/tv_person"
            android:layout_alignParentRight="true"
            android:hint="选填"
            android:textColorHint="@color/new_line_color"
            android:gravity="center_vertical"
            app:layout_textSizePercent="3.61%w"
            android:textColor="@color/gray_text"
            />
        <ImageView
            android:background="@drawable/arrow_vehicle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="2.92%w"
            app:layout_widthPercent="1.53%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5.55%w"
            />

    </com.zhy.android.percent.support.PercentRelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#f3f3f3"/>


</com.zhy.android.percent.support.PercentLinearLayout>
    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/page_title_color"
        />
    </com.zhy.android.percent.support.PercentRelativeLayout>
