<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="16.94%w"
        android:background="@drawable/selector_list_item_bg"
        android:layout_height="0dp"
        >

    <ImageView
        android:id="@+id/image"
        android:background="@drawable/category_004"
        app:layout_heightPercent="12.22%w"
        app:layout_widthPercent="12.22%w"
        app:layout_marginLeftPercent="5.97%w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弱点系统"
        android:layout_alignParentBottom="true"
        app:layout_textSizePercent="3.89%w"
        app:layout_marginLeftPercent="22.22%w"
        app:layout_marginBottomPercent="8.33%w"
        android:textColor="@color/new_text_color"
        />

    <TextView
        android:text="2017.03.12"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_textSizePercent="3.33%w"
        app:layout_marginLeftPercent="22.22%w"
        app:layout_marginBottomPercent="4.17%w"
        android:textColor="@color/new_text_color"
        />

    <TextView
        android:id="@+id/processed"
        android:text="待响应"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_textSizePercent="3.89%w"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="10.22%w"
        app:layout_marginBottomPercent="8.33%w"
        />
        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            app:layout_widthPercent="95.83%w"
            android:background="#d9d9d9"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

</com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>