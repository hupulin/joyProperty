<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#8f000000"
    android:id="@+id/layout"
    android:layout_height="match_parent">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_round_corners_bg"
            app:layout_heightPercent="74.13%w"
            android:id="@+id/rl"
            android:orientation="vertical"
            app:layout_widthPercent="74.72%w"

            android:layout_marginTop="152.5dp"
            android:layout_height="0dp">

            <ImageView

                android:id="@+id/tip"
                android:layout_width="0dp"
                android:layout_marginTop="49dp"
                android:contentDescription="@string/app_name"
                android:background="@drawable/task_finish"
                android:layout_gravity="center_horizontal"
                android:layout_height="0dp"
                app:layout_marginTopPercent="20.44%w"
                app:layout_heightPercent="31.22%w"

                app:layout_widthPercent="31.22%w"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:textColor="@color/page_title_color"
                android:textSize="15sp"
                android:layout_below="@+id/tip"
                android:layout_gravity="center_horizontal"
                android:text="您的需求已提交，"
                app:layout_marginTopPercent="9.85%w"

                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/explain"
                android:layout_width="wrap_content"
                android:textColor="@color/page_title_color"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:text="在物业下班时间提交的需求，"

                app:layout_marginTopPercent="4.64%w"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/page_title_color"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:text="马上安排工作人员帮您处理!"
                app:layout_marginTopPercent="4.64%w"
                />
    </com.zhy.android.percent.support.PercentLinearLayout>

<ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
android:layout_marginTop="-4dp"
    app:layout_heightPercent="13.47%w"
    app:layout_widthPercent="74.72%w"
    android:background="@drawable/task_complement_icon"
    android:layout_below="@+id/rl"
    android:layout_centerHorizontal="true"
    />
    </com.zhy.android.percent.support.PercentRelativeLayout>



</RelativeLayout>