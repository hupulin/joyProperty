<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_evaluation_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dialog_corners_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="问题未解决！"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/unsolved_close"
            android:layout_width="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/evaluation_closes_ic"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/unsolved_reason"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/unsolved_close"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialogtextview_border"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:hint="@string/unsolved_hint"
            android:maxHeight="200dp"
            android:paddingLeft="8.5dp"
            android:paddingTop="11.5dp"
            android:textColor="#bebebe"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/unsolved_reason"
            android:background="@drawable/dialogbutton_corners_bg"
            android:text="打回，再次处理"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/home_item_color"
            android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>