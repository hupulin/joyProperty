<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:orientation="vertical"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:background="@color/page_title_color_new">

        <ImageView
            android:id="@+id/back"
            android:layout_width="86px"
            android:layout_height="86px"

            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_back"
            android:contentDescription="@string/app_name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="领取快递"
            android:id="@+id/titleText"
            android:textColor="@color/white"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/receive_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="领取记录"
            android:textColor="@color/white"
            android:layout_marginRight="20px"
            android:textSize="14sp" />


    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@+id/title"
        android:orientation="horizontal"
        android:id="@+id/layout_01"
        android:layout_centerHorizontal="true"
        android:background="#f7f7f8"
        android:layout_marginTop="42px"
        android:layout_height="100px"
        android:layout_width="664px">
        <TextView
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请选择项目"
            android:textSize="28px"
            android:textColor="#000000"
            android:layout_marginLeft="62px"
            android:id="@+id/tv_apartment_name"
            android:background="@color/transparent"
            android:textColorHint="#aaaaaa"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="11px"
            android:layout_height="21px"
            android:layout_marginRight="35px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrow_vehicle"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@+id/layout_01"
        android:orientation="horizontal"
        android:id="@+id/layout_02"
        android:layout_centerHorizontal="true"
        android:background="#f7f7f8"
        android:layout_marginTop="32px"
        android:layout_height="100px"
        android:layout_width="664px">

        <EditText
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="62px"
            android:layout_toLeftOf="@+id/search"
            android:layout_marginRight="20px"
            android:layout_gravity="center_horizontal"
            android:hint="请输入 取件码/快递编号/手机号"
            android:textSize="28px"
            android:textColor="#000000"
            android:id="@+id/codeNo"
            android:background="@color/transparent"
            android:textColorHint="#aaaaaa"
            />
        <ImageView
            android:id="@+id/search"
            android:layout_alignParentRight="true"
            android:layout_width="80px"
            android:layout_height="match_parent"/>
        <ImageView
        android:layout_width="38px"
        android:layout_height="38px"
        android:layout_marginRight="35px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/dialog_express_scan"
        />

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="366px"
        android:layout_height="104px"
        android:layout_below="@+id/layout_02"
        android:layout_centerHorizontal="true"
        android:textSize="34px"
        android:layout_marginTop="96px"

        android:textColor="@color/white"
        android:text="搜 索"
        android:gravity="center"
        android:background="@drawable/shape_input_bg"
        android:id="@+id/search_input"

        />
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="1dp"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:shadowRadius="0.0"
        android:focusableInTouchMode="true"
        android:background="#D1D5D7"
        android:keyBackground="@drawable/btn_keyboard_key"
        android:keyTextSize="16sp"
        android:keyTextColor="#353535"
        android:visibility="gone" />
</com.zhy.autolayout.AutoRelativeLayout>