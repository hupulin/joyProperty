<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e5e5e5"
        android:gravity="center_vertical"
        android:layout_above="@+id/urgent"
        android:paddingLeft="20dp"
        android:text="取消"
        android:textColor="@color/page_title_color"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/urgent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/selector_item_list"
        android:layout_above="@+id/line02"
        app:layout_textSizePercent="3.61%w"
        app:layout_heightPercent="12.72%w"
        android:text="加急"
        android:textSize="17sp" />
    <View
        android:id="@+id/line02"
        android:layout_above="@+id/emergency"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d5"
        android:layout_below="@+id/layout_title"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/emergency"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12.72%w"
        android:background="@drawable/selector_item_list"

        android:layout_above="@+id/line01"
        android:gravity="center"
        android:text="紧急"
        app:layout_textSizePercent="3.61%w"
        />
    <View
        android:id="@+id/line01"
        android:layout_above="@+id/medium"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d5d5d5"
        android:layout_below="@+id/layout_title"/>
    <TextView
        app:layout_heightPercent="12.72%w"
        android:textColor="#000000"
        android:id="@+id/medium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/selector_item_list"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="一般"
        app:layout_textSizePercent="3.61%w"
        />


</com.zhy.android.percent.support.PercentRelativeLayout>