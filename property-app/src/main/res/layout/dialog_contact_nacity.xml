<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="#5f000000">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/dialog_service_top_bg"
            app:layout_heightPercent="25.80%w"
            android:id="@+id/code_register"
            app:layout_widthPercent="69.16%w"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogText"
            android:gravity="center"
            android:id="@+id/tv"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="3.66%w"
            app:layout_textSizePercent="4.5%w"
            android:textColor="@color/gray_text"
            android:text="400-103-7979"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:id="@+id/dialogText"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="5.889%w"
            app:layout_textSizePercent="5%w"
            android:textColor="@color/new_text_color"
            android:text="确认拨打电话："/>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_widthPercent="69.16%w"

            android:id="@+id/ll"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/code_register"
            >
            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="19.12%w"
                android:text="取消"
                app:layout_textSizePercent="5.5%w"
                android:gravity="center"
                android:textColor="@color/gray_text"
                android:background="@drawable/bulk_dialog_left_bg"
                app:layout_widthPercent="50%w"/>
            <Button
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="19.12%w"
                android:layout_alignParentRight="true"
                android:text="确定"
                app:layout_textSizePercent="5.5%w"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/bulk_dialog_right_bg"
                app:layout_widthPercent="50%w"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>