<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback_evaluation_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/read_evaluation_bg">


        <TextView
            android:id="@+id/titlesm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="关闭原因："
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/home_item_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/read_close"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_evaluation_close"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/closereson_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/read_close"
            android:layout_marginTop="10dp"
            android:textColor="@color/home_item_color"
            android:textSize="14sp" />


    </RelativeLayout>

</RelativeLayout>
