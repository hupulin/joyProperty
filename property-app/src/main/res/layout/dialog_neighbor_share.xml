<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#7f000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/add_comment_bg">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="19dp"
            android:layout_centerHorizontal="true"
            android:text="@string/navigation_share_tip01"
            android:textColor="#fffefd"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="15sp"
            android:background="@drawable/close" />

        <ImageView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv01"
            android:contentDescription="@string/app_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/share_ic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_wechat"
                android:gravity="center_horizontal"
                android:text="微信"
                android:textColor="#fffefd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_neighbor_qq"
                android:gravity="center_horizontal"
                android:text="QQ"
                android:textColor="#fffefd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/short_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_msg_share"
                android:gravity="center_horizontal"
                android:text="短信"
                android:textColor="#fffefd" />

            <TextView
                android:id="@+id/moment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/selector_moment"
                android:text="朋友圈"
                android:textColor="#fffefd"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>