<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/license_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_dialog_cancel_bg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="取消"
        android:textColor="@drawable/selector_dialog_cancel"
        android:textSize="19sp" />

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/license_cancel"
        android:background="@color/home_item_color"
        android:divider="#d5d5d5"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:paddingLeft="20dp"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:listSelector="@color/transparent"
        android:scrollbars="none"
        android:smoothScrollbar="true" />
</RelativeLayout>