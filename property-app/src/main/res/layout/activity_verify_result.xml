<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/page_title_color_new"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_back"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/verify_result"
            android:textColor="@color/home_item_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/head_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="17.5dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/head_ic" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"

                android:layout_marginTop="13.5dp"
                android:layout_toRightOf="@+id/head_image"
                android:textColor="#fff18f1c"
                android:textSize="38sp" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/result"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/head_image"
                android:textColor="#f18f1c"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_item01"
                android:layout_below="@+id/head_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item01"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/apartment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:id="@+id/btn_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item02"
                android:layout_below="@+id/ll_item01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item02"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/guest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_item07"
                android:layout_below="@+id/ll_item02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item07"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/car_no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_item03"
                android:layout_below="@+id/ll_item07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item03"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:ellipsize="middle"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/selector_phone_button"
                    android:contentDescription="@string/app_name" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item04"
                android:layout_below="@+id/ll_item03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item04"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/house"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_item08"
                android:layout_below="@+id/ll_item04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item08"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/arrive_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:id="@+id/btn_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_item09"
                android:layout_below="@+id/ll_item08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/verify_item_ic"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:gravity="center_vertical"
                    android:text="@string/verify_result_item09"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/leave_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/home_item_color"
                    android:textSize="17sp" />

                <ImageButton
                    android:id="@+id/btn_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7.5dp"
                    android:background="@drawable/check_bg"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_pass"
        android:layout_width="192dp"
        android:layout_height="40dp"
        android:background="#faca39"
        android:textColor="@color/home_item_color"
        android:text="通过"
        android:width="1dp"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/btn_no_pass"
        android:layout_width="192dp"
        android:layout_marginLeft="2dp"
        android:layout_height="wrap_content"
        android:background="#faca39"
        android:width="1dp"
        android:textColor="@color/home_item_color"
        android:text="不通过"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_pass"
        android:layout_toEndOf="@+id/btn_pass"
        android:layout_alignTop="@+id/btn_pass" />
</RelativeLayout>