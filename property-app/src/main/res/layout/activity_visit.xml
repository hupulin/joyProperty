<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="348px"
        android:gravity="center"
        android:text="扫一扫"
        android:textColor="@color/home_item_color"
        android:textSize="32px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="546px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51px"
            android:paddingRight="36px"
            android:paddingLeft="36px"
            android:contentDescription="@string/app_name"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/verify_code_ic"
            android:gravity="center_horizontal"
            android:text="二维码验证"
            android:textColor="@color/home_item_color"
            android:textSize="25px" />

        <TextView
            android:id="@+id/verify_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/verify_no_ic"
            android:gravity="center_horizontal"
            android:text="编码验证"
            android:paddingLeft="36px"
            android:paddingRight="36px"
            android:textColor="@color/home_item_color"
            android:textSize="25px" />

        <TextView
            android:id="@+id/bar_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:drawablePadding="20dp"
            android:drawableTop="@drawable/bar_code"
            android:paddingLeft="36px"
            android:paddingRight="35px"
            android:gravity="center_horizontal"
            android:text="快递录入"
            android:textColor="@color/home_item_color"
            android:textSize="25px" />
    </com.zhy.autolayout.AutoLinearLayout>


    <ImageView 
        android:id="@+id/cancel"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:contentDescription="@string/app_name"
        android:background="@drawable/verify_cancel_ic"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="16.66%w"
        app:layout_widthPercent="16.66%w"
        android:background="@drawable/selector_park"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_marginRightPercent="4.16%w"
        app:layout_marginBottomPercent="12.5%w"
        android:id="@+id/changePark"
        android:visibility="gone"
        />
</com.zhy.autolayout.AutoRelativeLayout>