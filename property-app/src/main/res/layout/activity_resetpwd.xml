<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    >


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="38px"
            android:layout_height="38px"
            app:layout_auto_basewidth="height"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="30px"
            android:layout_marginTop="56px"
       android:background="@drawable/forget_password_back_icon" />
        <TextView
            android:id="@+id/titel"
            android:text="找回密码"
            android:textColor="@color/white"
            android:textSize="32px"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="66px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <ImageView
        android:visibility="gone"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:contentDescription="@string/app_name"
        android:background="@drawable/logo_ic" />
    <TextView
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="重置密码"
        android:layout_below="@+id/image"
       android:visibility="gone"
        android:layout_marginTop="20dp"
        android:textColor="@color/home_item_color"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/llItem01"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"
        android:layout_marginTop="370px"

        android:layout_below="@+id/pwd"
        android:orientation="horizontal"
        android:padding="0dp">

        <EditText
            android:id="@+id/phone"
            android:paddingLeft="100px"
            android:paddingRight="100px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColorHint="@color/gray_text"
            android:background="@color/transparent"
            android:focusableInTouchMode="true"

            android:hint="手机号码"
            android:layout_marginRight="10dp"

            android:textSize="28px" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_text"
            android:layout_alignParentBottom="true"
            >

        </View>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/llItem02"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"


        android:layout_below="@+id/llItem01"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="1">



        <EditText

            android:id="@+id/code"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColorHint="@color/gray_text"
            android:background="@color/transparent"
            android:focusableInTouchMode="true"
            android:layout_marginRight="10dp"
            android:textSize="28px"
            android:hint="验证码"
            android:gravity="center"
            android:textColor="@color/login_gray_text"
            android:layout_centerInParent="true"
            android:layout_weight="0.59" />
        <Button
            android:id="@+id/send"
            android:layout_below="@+id/llItem01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/code"
           android:layout_alignParentRight="true"
            android:text=" 获取验证码 "
            android:textSize="20px"
            android:layout_centerVertical="true"
            android:textColor="@color/home_text_color" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="512px"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_text"
        android:layout_alignParentBottom="true"
        >

    </View>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/llItem03"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_below="@+id/llItem02"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"
        android:orientation="horizontal"
        android:padding="0dp">

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:gravity="center"

            android:focusableInTouchMode="true"
            android:hint="设置新密码"
            android:inputType="textPassword"
            android:paddingLeft="100px"
            android:paddingRight="100px"
            android:textColor="@color/login_gray_text"
            android:textColorHint="@color/gray_text"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_text">

        </View>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/llItem04"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:layout_marginLeft="104px"
        android:layout_marginRight="104px"

        android:layout_below="@+id/llItem03"
        android:orientation="horizontal"
        android:padding="0dp">
        <EditText

            android:paddingLeft="100px"
            android:paddingRight="100px"
            android:id="@+id/confirm"
            android:background="@color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:textColorHint="@color/gray_text"
            android:inputType="textPassword"
            android:textColor="@color/login_gray_text"
            android:focusableInTouchMode="true"
            android:layout_marginRight="10dp"
            android:hint="确认新密码"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_text"
            android:layout_alignParentBottom="true"
            >

        </View>
    </com.zhy.autolayout.AutoRelativeLayout>


    <Button
        android:id="@+id/complete"
        android:layout_below="@+id/tv_name"
        android:layout_width="512px"
        android:layout_height="90px"
     android:layout_gravity="center_horizontal"
        android:layout_marginTop="64px"
        android:background="@drawable/selector_btn_login"

        android:textSize="32px"
        android:textStyle="bold"
        android:text="确认修改"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llItem04"
        android:textColor="@color/gray_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="25px"
        android:textSize="22px"
        android:text="如有疑问，请联系悦嘉家工作人员"
        />
</com.zhy.autolayout.AutoLinearLayout>