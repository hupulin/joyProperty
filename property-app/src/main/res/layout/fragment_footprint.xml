<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f8f8"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:background="#e3fefd"
                android:orientation="horizontal"
                android:paddingLeft="24px"
                android:paddingRight="24px">


                <TextView
                    android:id="@+id/day"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="天"
                    android:textColor="#333333"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/week"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="周"
                    android:textColor="#999999"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/month"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="月"
                    android:textColor="#999999"
                    android:textSize="28px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">

                <TextView
                    android:id="@+id/top_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2017-2-13至2017-2-15"
                    android:textColor="#999999"
                    android:textSize="28px"

                    />

                <TextView
                    android:id="@+id/select_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70px"
                    android:background="@drawable/sign_select_time_shape"
                    android:paddingBottom="5px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:paddingTop="5px"
                    android:text="选择时间"
                    android:textColor="#50b7dd"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d9d9d9" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:scrollbars="none">


                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.Util.smoothchart.SmoothLineChartView
                        android:id="@+id/smoothChartView"
                        android:layout_width="wrap_content"
                        android:layout_height="420px"
                        android:background="#00000000" />

                    <GridLayout
                        android:id="@+id/time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="420px">


                    </GridLayout>


                </com.zhy.autolayout.AutoRelativeLayout>

            </HorizontalScrollView>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-48px"
                android:background="#ffffff">

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/auto_row"
                    android:layout_width="match_parent"
                    android:layout_height="200px">

                </com.bigkoo.convenientbanner.ConvenientBanner>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48px"
                android:layout_marginTop="45px">

                <View
                    android:layout_width="35px"
                    android:layout_height="33px"
                    android:background="@drawable/sign_repair_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8px"
                    android:text="在本段时间内您一共签到0次"
                    android:textColor="#333333"
                    android:textSize="25px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:layout_marginTop="12px"
                android:text="其中："
                android:textSize="25px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/work_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>